<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:padding="0dp"
    android:layout_height="wrap_content">
        <com.etsy.android.grid.util.DynamicHeightImageView
            android:id="@+id/image_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@+id/image_1"
            android:scaleType="centerCrop" />

            <com.etsy.android.grid.util.DynamicHeightTextView
                android:textSize="14sp"
                android:layout_gravity="bottom"
                android:textColor="@android:color/white"
                android:background="#55000000"
                android:id="@+id/txt_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.etsy.android.grid.util.DynamicHeightTextView
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txt_item_name"
                android:layout_toLeftOf="@+id/txt_item_price"
                android:textSize="10sp"
                android:layout_gravity="bottom"
                android:textColor="@android:color/white"
                android:background="#55000000"
                android:id="@+id/txt_item_designer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.etsy.android.grid.util.DynamicHeightTextView
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom"
                android:layout_below="@+id/txt_item_name"
                android:textColor="@android:color/white"
                android:background="#55000000"
                android:paddingLeft="2dp"
                android:textSize="15sp"
                android:id="@+id/txt_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


</RelativeLayout>