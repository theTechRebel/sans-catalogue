<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemName1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Batik Haze"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/price1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="$30.00"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/designer1"
                android:layout_marginBottom="4dp"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="23sp"
                android:text="$30.00"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/collection1"
                android:layout_marginBottom="4dp"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="23sp"
                android:text="$30.00"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/sex1"
                android:layout_marginBottom="4dp"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="23sp"
                android:text="$30.00"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/code1"
                android:layout_marginBottom="4dp"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="23sp"
                android:text="$30.00"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/label"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="23sp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="0dp"
                android:text="Select Quantity"
                android:paddingLeft="10dp"/>
            <Spinner
                android:id="@+id/quantity"
                android:textSize="23sp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="23sp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="0dp"
                android:text="Customer Details"
                android:paddingLeft="10dp"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:id="@+id/fullName"
                android:hint="Customers Full Name"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:id="@+id/address"
                android:hint="Customer Address"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:id="@+id/phone"
                android:hint="Customer Phone Number"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:id="@+id/email"
                android:hint="Customer Email Address"/>

            <TextView
                android:id="@+id/label3"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="23sp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="0dp"
                android:text="Select Payment Method"
                android:paddingLeft="10dp"/>

            <Spinner
                android:id="@+id/payment"
                android:textSize="23sp"
                android:layout_marginBottom="4dp"
                android:paddingLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:id="@+id/message"
                android:hint="Enter a message with this order"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:id="@+id/order1"
                android:hint="Place order"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>